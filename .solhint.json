{
  "extends": "solhint:recommended",
  "rules": {
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "not-rely-on-time": "warn",
    "no-empty-blocks": "off",
    "mark-callable-contracts": "off",
    "comprehensive-interface": "warn",
    "compiler-version": [
      "error",
      "^0.8.4"
    ]
  }
}